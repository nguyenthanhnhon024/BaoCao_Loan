@model PagedList.IPagedList<ModelEF.Model.UserAccount>
@using PagedList.Mvc
@using PagedList;


@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-user"></i> Quản lý người dùng
}

@using (Html.BeginForm("Index", "User", FormMethod.Post))
{
    <div class="col-lg-12 form-group">
        <div class="col-md-4">
            <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khóa cần tìm kiếm" class="form-control">
        </div><div class="col-md-2">
            <input type="submit" value="Tìm kiếm" class="btn btn-default" />
        </div>
    </div>
}
<div class="col-lg-12 form-group">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Cấu hình</th>
            <th>Tên đăng nhập</th>
            <th>Mật khẩu</th>
            <th>Status</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr id=" row_@item.ID">
                <td>
                    @item.ID
                </td>
                <td>
                    &nbsp;
                    @Ajax.ActionLink(" ", "Delete",new { id = item.ID }, new AjaxOptions
               {
                   Confirm = "Bạn có muốn xoá bản ghi này?",
                   OnComplete = "$('#row_" + item.ID + "').remove()",
                   HttpMethod = "Delete"
               }, new { @class = " glyphicon glyphicon-trash" })
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Password
                </td>
                <td>
                    @item.Status
                </td>
            </tr>

        }
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
</div>