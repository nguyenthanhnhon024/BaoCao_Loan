@model ModelEF.Model.Product

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-file-text-o"></i> Chi tiết sản phẩm
}


<div class="col-lg-12 form-group">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Tên Sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
            <th>LoaiSP_ID</th>
            <th>Image</th>
        </tr>
        <tr>
            <td>
                @Model.ID
            </td>
            <td>
                @Model.Name
            </td>
            <td>
                @Model.UnitCost
            </td>
            <td>
                @Model.Quantity
            </td>
            <td>
                @Model.Description
            </td>
            <td>
                @Model.Status
            </td>
            <td>
                @Model.Category.Name
            </td>
            <td>
                <img src=" @Url.Content("~/Image/"+@Model.Image)" height="50" width="50" />
            </td>
        </tr>

    </table>

</div>